<h1>This is where we'll view a specifc station with the reviews!</h1>

<h4>Station: </h4>

<h1><%= @station.name %></h1>

<h5> Address: <%= @station.address %> </h5>
<h5> City: <%= @station.city %> </h5>
<h5> State: <%= @station.state %> </h5>
<h5> Zip Code: <%= @station.zip %> </h5>

  </br></br>

<% if user_signed_in? %>
  <%= link_to "Add Review", new_station_review_path(@station) %>
<% end %>

  </br></br>

<%= link_to "Back to Home Page", root_path %>

<ol>

<% @reviews.each do |review| %>
  <div class="review-<%=review.id%>" id="review-<%=review.id%>">

    <%= "(#{review.rating}/5) #{review.user.email} says:" %>
    <%= review.body %>
    <div class="votes">
      Upvotes: <%= review.up_votes%>
      Downvotes: <%= review.down_votes%>
    </div>

    <div class="vote" id="upvote">
      <%= button_to "upvote", station_review_path(@station,review), method:"patch", remote: true, params: {up: true}%>
    </div>
    <div class="vote" id="downvote">
      <%= button_to "downvote", station_review_path(@station,review), method:"patch", remote: true, params: {up: false}%>
    </div>
  </div>
<% end %>

</ol>
