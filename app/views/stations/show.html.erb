<h1><%= @station.name %></h1>
</br>

<h5> Address: <%= @station.address %> </h5>
<h5> City: <%= @station.city %> </h5>
<h5> State: <%= @station.state %> </h5>
<h5> Zip Code: <%= @station.zip %> </h5>
<h5> Rating: <%= @station.average_rating %> </h5>

  </br></br>

<% if user_signed_in? %>
  <%= link_to "Add Review", new_station_review_path(@station) %>
<% end %>

  </br></br>

<h2>Reviews:</h2>
  </br>
<ol>

<% @reviews.each do |review| %>
  <li><%= review.body %></li>
  <div class="review-<%=review.id%>" id="review-<%=review.id%>">

    <%= "(#{review.rating}/5) #{review.user.email} says:" %>
    <%= review.body %>
    <div class="votes">
      Upvotes: <%= review.up_votes%>
      Downvotes: <%= review.down_votes%>
    </div>

    <div class="vote" id="upvote">
      <%= button_to "upvote", vote_station_review_path(@station,review), method:"patch", remote: true, params: {up: true}%>
    </div>
    <div class="vote" id="downvote">
      <%= button_to "downvote", vote_station_review_path(@station,review), method:"patch", remote: true, params: {up: false}%>
    </div>
  </div>
  <% if user_signed_in? %>
    <% if review.user == current_user || current_user.admin?%>
    <ul class='edit-delete'>
      <li class='edit-delete'><%= link_to 'Delete Review', station_review_path(@station, review), data: { confirm: 'Are you sure?' }, method: :delete %></li>
      <li class='edit-delete'><%= link_to 'Edit Review', edit_station_review_path(@station, review) %></li>
    </ul>
    <% end %>
  <% end %>
<% end %>

</ol>

<%= link_to "Back to Home Page", root_path %>

<div>
  <% if user_signed_in? %>
    <% if @station.user == current_user || current_user.admin?%>
      <ul class='edit-delete'>
        <li class='edit-delete'><%= link_to 'Delete Station', station_path(@station), data: { confirm: 'Are you sure?' }, method: :delete %></li>
        <li class='edit-delete'><%= link_to 'Edit Station', edit_station_path(@station) %></li>
      </ul>
    <% end %>
  <% end %>
</div>
