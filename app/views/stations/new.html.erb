<% if user_signed_in? %>
  <h1>This is where we'll create a new station</h1>

  <%= form_for(@station) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
      <br>
    <%= f.label :address %>
    <%= f.text_field :address %>
      <br>
    <%= f.label :city %>
    <%= f.text_field :city %>
      <br>
    <%= f.label :state %>
    <%= f.text_field :state %>
      <br>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
      <br>
    <%= f.submit "Add Station" %>
  <% end %>

  <%= link_to "Back to Home Page", root_path %>
<% else %>
  <h2>Need to be signed in to add station!</h2>
<% end %>
